{
  "info": {
    "name": "payment-service APIs",
    "_postman_id": "paymentservice-collection",
    "description": "Collection aligned to README API plan for payment-service.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health",
      "item": [
        {
          "name": "GET /api/v1/health",
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{baseUrl}}/api/v1/health"
          }
        },
        {
          "name": "GET /api/v1/health/ready",
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{baseUrl}}/api/v1/health/ready"
          }
        },
        {
          "name": "GET /api/v1/health/live",
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{baseUrl}}/api/v1/health/live"
          }
        }
      ]
    },
    {
      "name": "Payment APIs",
      "item": [
        {
          "name": "POST /api/v1/payments/intent",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "X-User-Id",
                "value": "{{userId}}"
              },
              {
                "key": "X-Actor-Type",
                "value": "{{actorType}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"bookingId\": \"{{bookingId}}\",\n  \"amount\": 5800,\n  \"currency\": \"INR\"\n}"
            },
            "url": "{{baseUrl}}/api/v1/payments/intent"
          }
        },
        {
          "name": "POST /api/v1/payments/{paymentId}/authorize",
          "request": {
            "method": "POST",
            "header": [],
            "url": "{{baseUrl}}/api/v1/payments/{{paymentId}}/authorize"
          }
        },
        {
          "name": "POST /api/v1/payments/{paymentId}/capture",
          "request": {
            "method": "POST",
            "header": [],
            "url": "{{baseUrl}}/api/v1/payments/{{paymentId}}/capture"
          }
        },
        {
          "name": "POST /api/v1/payments/{paymentId}/refund",
          "request": {
            "method": "POST",
            "header": [],
            "url": "{{baseUrl}}/api/v1/payments/{{paymentId}}/refund"
          }
        },
        {
          "name": "POST /api/v1/payments/webhooks/provider",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"provider\": \"mock-gateway\",\n  \"eventType\": \"payment.captured\",\n  \"payload\": {\n    \"paymentId\": \"{{paymentId}}\"\n  }\n}"
            },
            "url": "{{baseUrl}}/api/v1/payments/webhooks/provider"
          }
        }
      ]
    }
  ]
}
