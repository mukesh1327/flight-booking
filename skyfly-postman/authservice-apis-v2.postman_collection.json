{
  "info": {
    "name": "auth-service APIs",
    "_postman_id": "authservice-collection",
    "description": "Collection aligned to README API plan for auth-service.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health",
      "item": [
        {
          "name": "GET /api/v1/health",
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{baseUrl}}/api/v1/health"
          }
        },
        {
          "name": "GET /api/v1/health/ready",
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{baseUrl}}/api/v1/health/ready"
          }
        },
        {
          "name": "GET /api/v1/health/live",
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{baseUrl}}/api/v1/health/live"
          }
        }
      ]
    },
    {
      "name": "Auth APIs",
      "item": [
        {
          "name": "GET /api/v1/auth/public/google/start",
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{baseUrl}}/api/v1/auth/public/google/start"
          }
        },
        {
          "name": "GET /api/v1/auth/public/google/callback",
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{baseUrl}}/api/v1/auth/public/google/callback?code={{code}}&state={{state}}"
          }
        },
        {
          "name": "POST /api/v1/auth/token/refresh",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refreshToken\": \"{{refreshToken}}\"\n}"
            },
            "url": "{{baseUrl}}/api/v1/auth/token/refresh"
          }
        },
        {
          "name": "POST /api/v1/auth/logout",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "X-User-Id",
                "value": "{{userId}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refreshToken\": \"{{refreshToken}}\",\n  \"allSessions\": true\n}"
            },
            "url": "{{baseUrl}}/api/v1/auth/logout"
          }
        },
        {
          "name": "POST /api/v1/auth/corp/login/init",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"identifier\": \"staff@skyfly.dev\",\n  \"device\": {\n    \"deviceId\": \"corp-device-1\",\n    \"platform\": \"web\"\n  }\n}"
            },
            "url": "{{baseUrl}}/api/v1/auth/corp/login/init"
          }
        },
        {
          "name": "POST /api/v1/auth/corp/login/verify",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"flowId\": \"{{flowId}}\",\n  \"credential\": \"{{credential}}\"\n}"
            },
            "url": "{{baseUrl}}/api/v1/auth/corp/login/verify"
          }
        },
        {
          "name": "POST /api/v1/auth/corp/mfa/challenge",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"flowId\": \"{{flowId}}\",\n  \"method\": \"{{mfaMethod}}\"\n}"
            },
            "url": "{{baseUrl}}/api/v1/auth/corp/mfa/challenge"
          }
        },
        {
          "name": "POST /api/v1/auth/corp/mfa/verify",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"flowId\": \"{{flowId}}\",\n  \"code\": \"{{mfaCode}}\"\n}"
            },
            "url": "{{baseUrl}}/api/v1/auth/corp/mfa/verify"
          }
        }
      ]
    }
  ]
}
