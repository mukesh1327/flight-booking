    {
      "name": "Customer APIs",
      "item": [
        {
          "name": "GET /api/v1/users/me",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "X-User-Id",
                "value": "{{userId}}"
              },
              {
                "key": "X-Actor-Type",
                "value": "{{actorType}}"
              }
            ],
            "url": "{{baseUrl}}/api/v1/users/me"
          }
        },
        {
          "name": "PATCH /api/v1/users/me",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "X-User-Id",
                "value": "{{userId}}"
              },
              {
                "key": "X-Actor-Type",
                "value": "{{actorType}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Updated User\",\n  \"preferences\": {\n    \"seat\": \"window\"\n  }\n}"
            },
            "url": "{{baseUrl}}/api/v1/users/me"
          }
        },
        {
          "name": "POST /api/v1/users/me/mobile/verify/request",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "X-User-Id",
                "value": "{{userId}}"
              },
              {
                "key": "X-Actor-Type",
                "value": "{{actorType}}"
              }
            ],
            "url": "{{baseUrl}}/api/v1/users/me/mobile/verify/request"
          }
        },
        {
          "name": "POST /api/v1/users/me/mobile/verify/confirm",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "X-User-Id",
                "value": "{{userId}}"
              },
              {
                "key": "X-Actor-Type",
                "value": "{{actorType}}"
              }
            ],
            "url": "{{baseUrl}}/api/v1/users/me/mobile/verify/confirm"
          }
        },
        {
          "name": "POST /api/v1/notifications/email",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "X-Actor-Type",
                "value": "{{actorType}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"to\": \"customer@skyfly.dev\",\n  \"subject\": \"Booking Confirmed\",\n  \"body\": \"Your ticket is confirmed\"\n}"
            },
            "url": "{{baseUrl}}/api/v1/notifications/email"
          }
        },
        {
          "name": "POST /api/v1/notifications/sms",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "X-Actor-Type",
                "value": "{{actorType}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"to\": \"+911234567890\",\n  \"message\": \"Flight on schedule\"\n}"
            },
            "url": "{{baseUrl}}/api/v1/notifications/sms"
          }
