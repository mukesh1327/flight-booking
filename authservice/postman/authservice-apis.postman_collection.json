              { "key": "Content-Type", "value": "application/json" },
              { "key": "X-User-Id", "value": "{{userId}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"firstName\": \"Sky\",\n  \"lastName\": \"Fly\",\n  \"mobile\": \"9999999999\",\n  \"preferences\": {\n    \"locale\": \"en-IN\"\n  }\n}"
            },
            "url": "{{baseUrl}}/api/v1/users/me"
          }
        }
      ]
    },
    {
      "name": "Corp Admin",
      "item": [
        {
          "name": "Create Corp User",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"ops.user@airline.com\",\n  \"roleIds\": [\"OPS_AGENT\"],\n  \"department\": \"OPS\",\n  \"managerId\": \"mgr-001\"\n}"
            },
            "url": "{{baseUrl}}/api/v1/corp/users"
          }
        },
        {
          "name": "Update Corp User",
          "request": {
            "method": "PATCH",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"ACTIVE\",\n  \"department\": \"OPS\",\n  \"managerId\": \"mgr-002\"\n}"
            },
            "url": "{{baseUrl}}/api/v1/corp/users/{{corpUserId}}"
          }
        },
        {
          "name": "Enable Corp User",
          "request": {
            "method": "POST",
            "header": [],
            "url": "{{baseUrl}}/api/v1/corp/users/{{corpUserId}}/enable"
          }
        },
        {
          "name": "Disable Corp User",
          "request": {
            "method": "POST",
            "header": [],
            "url": "{{baseUrl}}/api/v1/corp/users/{{corpUserId}}/disable"
          }
        },
        {
          "name": "Assign Role",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"roleId\": \"CORP_ADMIN\"\n}"
            },
            "url": "{{baseUrl}}/api/v1/corp/users/{{corpUserId}}/roles"
          }
        },
        {
          "name": "Remove Role",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": "{{baseUrl}}/api/v1/corp/users/{{corpUserId}}/roles/{{roleId}}"
          }
        },
        {
          "name": "Force MFA Reset",
          "request": {
            "method": "POST",
            "header": [],
            "url": "{{baseUrl}}/api/v1/corp/users/{{corpUserId}}/force-mfa-reset"
          }
        },
        {
          "name": "Revoke All Sessions",
          "request": {
            "method": "POST",
            "header": [],
            "url": "{{baseUrl}}/api/v1/corp/users/{{corpUserId}}/session-revoke"
          }
        }
      ]
    }
  ],
